  token mother-time-spec-word { 'мать' | 'материнский' };
  token new-time-spec-word { 'новый' | 'новая' | 'новое' | 'новые' };
  token next-time-spec-word { 'следующий' | 'следующая' | 'следующое' | 'следующие'};
  token nov-time-spec-word { 'ноя' };
